{% if products %}
    {% for product in products %}
        <div class="row align-items-center cartRow mb-3">
            <div class="col-auto col-md-auto pr-sm-4 cartProductItem">
                <img src="{{ product.thumb }}" alt="" class="img-fluid">
            </div>
            <div class="col col-md cartProductItem">
                <div>
                    <p class="article">Артикул: <span>{{ product.article }}</span></p>
                    <h4><a href="">{{ product.name }}</a></h4>
                </div>
            </div>
            <div class="justify-content-end col cartProductItem">
                <p class="prodPrice">{{ product.total }} <span>₸</span></p>
            </div>
        </div>
    {% endfor %}


    <div class="row align-items-center mb-4 pt-3 pt-lg-5">
        <div class="col-12 col-lg order-last order-lg-first text-center text-xl-left pt-4 pt-lg-0 d-none d-sm-block">
            <ul class="stepCart list-inline">
                <li class="list-inline-item ">Корзина</li>
                <li class="list-inline-item active">Оформление заказа</li>
                <li class="list-inline-item">Заказ принят</li>
            </ul>
        </div>
    </div>
    <div class="row align-items-center mb-4">
        <div class="col-12">
            {% for total in totals|slice(1,1) %}
                {% if total.text != 0 %}
                <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                        <span class="totalProduct">Стоимость доставки:</span>
                    </div>
                    <div class="col-auto">
                            <span class="totalPrice">{{ total.text }} <span>₸</span></span>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            {% for total in totals|slice(2,1) %}
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            <span class="totalProduct">Итого <span>{{ products|length }}</span> {% if products|length < 2 %}товар{% elseif products|length < 5 %}товара{% else %}товаров{% endif %} на сумму:</span>
                        </div>
                        <div class="col-auto">
                            <span class="totalPrice">{{ total.text }} <span>₸</span></span>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

