{{ header }}
<div id="error-not-found" class="">

    <section id="breadcrumbs">
        <div class="container-fluid px-0 py-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 mb-1 d-none d-sm-block">
                        <ul class="list-inline">
                            {% for breadcrumb in breadcrumbs %}
                                <li class="list-inline-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-12">
                        <h1 class="m-0">{{ heading_title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="cartThree">
        <div class="successMessage py-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-10 offset-lg-2">
                        <div class="row align-items-center">
                            <div class="col-4 offset-4 col-lg-3 offset-lg-0 mb-4 mb-lg-0 d-flex align-items-center">
                                <img src="img/cartEmpty.svg" alt="" class="img-fluid mx-auto">
                            </div>
                            <div class="col-lg-9 pl-lg-5 text-center text-lg-left">
                                <h6 class="mb-3">{{ text_error }}</h6>
                                <button class="goCatalog" onclick="location = 'index.php?route=product/category&path=18'"><i class="fa fa-long-arrow-left mr-2"></i>Продолжить покупки</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{{ footer }}
