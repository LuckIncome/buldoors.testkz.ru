                </ul>
            </div>
        </div>
    </div>
</nav>


<header>
    <div class="container">
        <div class="row headerLine align-items-start align-items-xl-center">
            <div class="col-auto order-first headerLogo">
                <a href="/">
                    <img src="https://buldoors.kz/img/logo_header_new.jpg" alt="">
                </a>
            </div>
            <div id="mainIcons" class="col col-xl-auto order-xl-last order-2 justify-content-end pl-0 px-sm-3 px-xl-2">
                <ul class="list-inline navIcons">
                    <li class="list-inline-item d-none d-lg-block">
                        {{ language }}
                    </li>
                    <li class="list-inline-item">
                        <!--cart-->
                        {{ cart }}
                        <!--cart-->
                    </li> 
                    <li class="list-inline-item d-none d-lg-block">
                        <a class="button" id="comparetotal" href="{{ compare }}"><img src="https://buldoors.kz/img/compare.svg" alt="">
                        {% if text_compare != 0 %}
                            <span id="compare-total">{{ text_compare }}</span>
                        {%  endif %}
                        </a>
                    </li>
                    <li class="list-inline-item d-block d-lg-none">
                        <a class="button" href="#" data-toggle="modal" data-target="#searchModal"><img src="img/search.svg" alt=""></a>
                    </li>
                </ul>
            </div>
            <div id="mainMenu" class="col-auto col-sm-2 col-xl order-last order-xl-2 pr-2 pl-0 p-sm-0">
                <nav id="menu" class="navbar navbar-expand-xl navbar-light p-0">
                    <button class="navbar-toggler ml-auto border-0" type="button" data-toggle="collapse" data-target="#mainNavbar" aria-expanded="false" aria-controls="mainNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <a href="#" class="closeBtn"><i class="">&times;</i></a>
                        <ul class="navbar-nav mx-auto">
                            {{ menu }}
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>


</header>

<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="callback" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body" style="background-color: #444444;">
                <div class="input-group" id="searchs">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-search"></i></span>
                    </div>
                    <input class="form-control" name="searchs" placeholder="Я хочу купить..." type="text" value="">
                    <span class="input-group-btn">
                        <button class="button" type="button">Найти</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>